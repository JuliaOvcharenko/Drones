generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url = "file:./database.db" 
}

model Product {
  id               Int    @id @default(autoincrement())
  name             String @unique
  price            Int
  discount         Int
  countOfProduct Int
  category          Category @relation(fields: [categoryId], references: [id])
  categoryId        Int
  blocks ProductInfoBlock[]
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  image String
  products Product[]
  
}

model ProductInfoBlock {
  id          Int    @id @default(autoincrement())
  block_order Int
  align       String
  title       String
  content     String
  product     Product @relation(fields: [productId], references: [id])
  productId  Int
}